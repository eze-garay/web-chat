<div class="container">
        <div>
          <form id="TicketForm">
            <input type="hidden" name="cid" value="{{user.cart}}">  
            <button type="submit" class="btn btn-primary">Finalizar compra</button>
          </form>
        </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="d-raw text-center">
        <h1 class="h3">{{title}}</h1>
      </div>
      {{#if message}}
        <div class="alert alert-danger" role="alert">
          {{message}}
        </div>
      {{/if}}
      <div class="row">
        {{#each cart.products}}
          <div class="col-xl-4 p-1">
            <div class="card">
              <div class="card-header">
                {{this.product.title}}
              </div>
              <div class="card-body">
                <h5 class="card-title">Precio por producto: ${{this.product.price}}</h5>
                <p class="card-text">Descripci√≥n: {{this.product.description}}</p>
                <p class="card-text">Cantidad de producto seleccionado: {{this.quantity}}</p>
                <form action="/api/extend/carts/eliminar" method="POST">
                  <input type="hidden" name="cid" value="{{user.cart}}">
                  <input type="hidden" name="pid" value={{this.product._id}}>
                  <button type="submit" class="btn btn-primary">Eliminar</button>
                </form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>


