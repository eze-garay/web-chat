<div class="container">
<div class="row col-sm-6">
<div class="container col-sm-6 ">
        <div class="d-raw text-center">
            <hi class="h3">{{title}} </hi>
        </div>
            {{#if message}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
            {{/if}}
        <div class="row">
    <div class="row">
    
            {{#if message}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
            {{/if}}
        {{#each cart.products}}
        <div class="row">
        <div class="col-xl p-2">    
        <div class="card">
          <div class="card-header">
            {{this.product.title}}
          </div>
          <div class="card-body">
            {{!-- <form method="POST" action='/api/extend/carts/eliminar'> --}}
              <h5 class="card-title"> Precio por producto: ${{this.product.price}}</h5>
              <p class="card-text">Descripcion: {{this.product.description}}</p>
              <p class="card-text">Cantidades de producto seleccionado {{this.quantity}}</p>
              <form action="/api/extend/carts/eliminar" method="POST">
              <input type="hidden" name="cartId" value="644afbd4483344a1d2570cbc">
              {{!-- <input type="hidden" name="cartId" value="{{userId}}"> --}}
              <input type="hidden" name="productId" value="{{this.product._id}}">
              <button type="submit" class="btn btn-primary">Eliminar</button>
           </form>
          </div>
        </div>
        </div>
        </div>
          {{/each}} 
    </div>

